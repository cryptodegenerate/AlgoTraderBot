# Railway Environment Variables Template
# Copy to .env for local development

# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration (Railway will auto-inject if using Railway PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname:port/database

# Session Security
SESSION_SECRET=your-session-secret-here

# Exchange API Keys (Required for live trading)
# Bybit API Keys
BYBIT_API_KEY=your-bybit-api-key
BYBIT_API_SECRET=your-bybit-api-secret

# OKX API Keys  
OKX_API_KEY=your-okx-api-key
OKX_API_SECRET=your-okx-api-secret

# Kraken API Keys
KRAKEN_API_KEY=your-kraken-api-key
KRAKEN_API_SECRET=your-kraken-api-secret

# Telegram Bot (Optional - for trade alerts)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Admin Access (Optional - for remote bot control)
ADMIN_TOKEN=your-admin-token

# Trading Configuration
DRY_RUN=true
RISK_PER_TRADE=0.01
DAILY_MAX_DD=0.05

# Performance Optimization
NODE_OPTIONS=--max-old-space-size=512